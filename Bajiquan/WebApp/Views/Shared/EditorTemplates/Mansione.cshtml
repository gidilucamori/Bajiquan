@{
    var values = Enum.GetValues(typeof(Bajiquan.Database.Mansione)).Cast<Bajiquan.Database.Mansione>();

    IEnumerable<SelectListItem> items =
        from value in values
        select new SelectListItem
        {
            Text = value.ToString(),
            Value = value.ToString(),
            Selected = (value.Equals(Bajiquan.Database.Mansione.Allievo))
        };
}

@Html.DropDownList("", items)