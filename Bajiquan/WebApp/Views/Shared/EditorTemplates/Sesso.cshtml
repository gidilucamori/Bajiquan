@{
    var values = Enum.GetValues(typeof(Bajiquan.Database.Sesso)).Cast<Bajiquan.Database.Sesso>();

    IEnumerable<SelectListItem> items =
        from value in values
        select new SelectListItem
        {
            Text = value.ToString(),
            Value = value.ToString(),
            Selected = (value.Equals(Bajiquan.Database.Sesso.Maschio))
        };
}

@Html.DropDownList("Sesso", items)